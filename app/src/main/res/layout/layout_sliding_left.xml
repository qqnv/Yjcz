<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_weight="1.6"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_portraitLeft"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_vertical"
            fresco:placeholderImage="@mipmap/txs"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="科室长"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="35dp">

        <TextView
            android:id="@+id/tv_mine"
            style="@style/slidingStyle"
            android:text="个人中心                  " />

        <View style="@style/slidStyle" />

        <TextView
            android:id="@+id/tv_changePwd"
            style="@style/slidingStyle"
            android:text="修改密码                  " />

        <View style="@style/slidStyle" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/slidingStyle"
            android:text="消息中心                  " />

        <View style="@style/slidStyle" />

        <TextView
            android:id="@+id/tv_aboutUs"
            style="@style/slidingStyle"
            android:text="关于我们                  " />

        <View style="@style/slidStyle" />

        <TextView
            android:id="@+id/tv_switchAccount"
            style="@style/slidingStyle"
            android:text="设置IP                      " />

        <View style="@style/slidStyle" />
        <TextView
            android:id="@+id/tv_clusterSet"
            style="@style/slidingStyle"
            android:text="调度配置                      " />

        <View style="@style/slidStyle" />

        <TextView
            android:id="@+id/tv_singOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/sign_out"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <View style="@style/slidStyle" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/sz"
            android:gravity="center_horizontal"
            android:text="设置"
            android:textColor="#444"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</LinearLayout>