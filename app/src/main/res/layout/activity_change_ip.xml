<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">

    <include
        android:id="@+id/layout_header"
        layout="@layout/include_header"/>

    <LinearLayout
        android:id="@+id/ll_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_header"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:text="@string/ip"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="@dimen/dp_5"
            android:hint="@string/ip_input"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/border_white"
            android:paddingLeft="@dimen/dp_20"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dkh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_ip"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_dkh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:text="@string/dkh"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_dkh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="@dimen/dp_5"
            android:hint="@string/dkh_input"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/hint"
            android:background="@drawable/border_white"
            android:paddingLeft="@dimen/dp_20"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_differ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dkh"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_below="@id/tv_differ"
        style="@style/updateStyle"/>


</RelativeLayout>