<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:orientation="vertical">

    <include
        layout="@layout/include_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_djz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="对讲组："
            android:textColor="@color/white"
            android:textSize="@dimen/sp_28"
            android:typeface="normal" />
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_djz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_input" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_jhr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="讲话人：暂无"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22" />

    <TextView
        android:id="@+id/tv_dqzt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="当前状态：空闲"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22" />

    <ImageView
        android:id="@+id/iv_voice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/dp_20"
        android:src="@mipmap/microphone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <com.othershe.library.NiceImageView
            android:id="@+id/niv_qz"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_3"
            android:scaleType="centerCrop"
            android:src="@mipmap/meeting"
            app:is_circle="true" />
    </RelativeLayout>


</LinearLayout>